{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/filmami_commun.css') }}">
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}" type="text/css">
{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt">Contactez-nous ! </h1>
        <h3>Nous vous répondrons rapidement</h3><br>
        <hr>

        {{ form_start(form) }}

        {{ form_row(form.nom) }}

        {{ form_row(form.email) }}

        {{ form_row(form.body) }}
        <br>
        <button type="submit" class="btn btn-dark" title="Envoyez-nous votre message!">
            Envoyer
        </button><br><br>
        {{ form_end(form) }}

        <hr>
    <button  type="submit" class="boubou btn btn-dark" title="Revenir à l'accueil"><a href="{{ path('app_index_index') }}">
        Retour
    </a></button>




    </div>
{% endblock %}