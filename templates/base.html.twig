<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.0/lux/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-smnSwzHqW1zKbeuSMsAM/fMQpkk7HY11LuHiwT8snL/W2QBoZtVCT4H5x1CEcJCs" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Ewert&family=Lacquer&family=Mystery+Quest&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/filmami_commun.css') }}">
    {% endblock %}
    <title>Filmami</title>
    <link type="image/jpeg" rel="icon" href="{{ asset('clap_onglet.jpg') }}" />
</head>
{#         ///////         NAVBAR    ADMIN            ///////               #}
{% if is_granted('ROLE_ADMIN') %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <a href="{{ path('app_index_index') }}"  alt=""><img class="navbar-brand" width="85" height="60" src="{{ asset('img/logo.png') }}" alt=""></a>
        <a class="navbar-brand police1" href="{{ path('app_index_index') }}">FilmAmi</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_index_index') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_suggestion_index') }}">Suggestions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_profil_index') }}">Mon profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_admin_ville_index') }}">Villes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_admin_genre_index') }}">Genre de films</a>
                </li>
            </ul>
            <div class="bonjour">
                <div class="davy">
                    <a class="nav-item nav-link nav-link2" href="#">Bonjour {{ app.user }} !</a>
                </div>
                <div>
                    <button class="nav-item btn btn-outline-dark my-2 my-sm-0" type="submit"><a href="{{ path('app_index_logout') }}">Déconnexion</a></button>
                </div>
            </div>
        </div>
    </nav>
{% endif %}
{#         ///////        FIN    NAVBAR   ADMIN             ///////               #}
{#         ///////         NAVBAR   PUBLIC             ///////               #}
{% if is_granted('ROLE_USER') %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a href="{{ path('app_index_index') }}"  alt=""><img class="navbar-brand" width="85" height="60" src="{{ asset('img/logo.png') }}" alt=""></a>
        <a class="navbar-brand" href="{{ path('app_index_index') }}">FilmAmi</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_index_index') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_suggestion_index') }}">Suggestions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_profil_index') }}">Mon profil</a>
                </li>
            </ul>
            <div class="bonjour">
                <div class="davy">
                    <a class="nav-item nav-link nav-link2" href="#">Bonjour {{ app.user }} !</a>
                </div>
                <div>
                    <button class="nav-item btn btn-outline-dark my-2 my-sm-0" type="submit"><a href="{{ path('app_index_logout') }}">Déconnexion</a></button>
                </div>
            </div>
        </div>
    </nav>
{% endif %}
{#         ///////        FIN    NAVBAR    PUBLIC            ///////               #}
<main class="container-fluid">

    {# pour l'affichage des messages flash #}
    {% for type, messages in app.session.flashBag.all %}

        {# pour la class alert-danger de bootstrap#}
        {% if type == 'error' %}
            {% set type = 'danger' %}
        {% endif %}

        {% for message in messages %}
            <div class="alert alert-{{ type }} mt-2">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
</main>
    {% block body %}{% endblock %}

    {#    footer html #}
    <footer>
        <span>Nos réseaux sociaux :</span>
        <div class="row">
            <a href="https://twitter.com/"><img src="{{ asset('img/logo_twitter.png') }}" alt=""></a>
            <a href="https://www.instagram.com/"><img src="{{ asset('img/logo_instagram.png') }}" alt=""></a>
            <a href="https://www.facebook.com/"><img src="{{ asset('img/logo_facebook.png') }}" alt=""></a>
        </div>
        <span><a class="double" href="{{ path('app_index_contact') }}">Contactez-nous !</a></span>

        <span> Copyright &copy;Filmami 2020</span>
    </footer>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>