{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}" type="text/css">
{% endblock %}

{% block title %}Mon profil{% endblock %}

{% block body %}

    <div class="container-fluid">

        <!-------- Titre profil -------->
        <div class="row">
            <div class="col text-center mb-5 mt-5">
                <h1>Mon profil</h1>
            </div>
        </div>

        <!-------- Début carte profil -------->
        <div class="row justify-content-center">
            <div class="col-xs ">
                <div class="row border border-dark rounded ml-5 mr-5 d-flex justify-content-center" id="profil">
                    <div class="col-xs">
                        <div class="row justify-content-center">

                            <!-------- Col gauche -------->
                            <div class="col-xs ml-5 mt-5 mr-5 mb-5">

                                <!-------- Si image modifiée: -------->
                                {% if profil.image is not null %}
                                    <img class="img-thumbnail" src="{{ asset('images/' ~ profil.image) }}">

                                    <!-------- Si pas d'image placeholder par défault: -------->
                                {% else %}
                                    <img class="img-thumbnail" src="{{ asset('img/placeholder_3.png') }}" alt="">

                                {% endif %}
                            </div>

                            <!-------- Col Droite -------->
                            <div class="col-xs ml-5 mt-5 mr-5 mb-5" id="droite">
                                <div class="col text-center mb-4 p-1" ><h2>{{ profil.pseudo }}</h2></div>
                                <div class="col p-1">Ville : &nbsp {{ profil.ville.nom }}</div>

                                <!-------- L'âge renseigné ou non -------->
                                <div class="col p-1">
                                    {% if profil.age is not null %}
                                        Age &nbsp: &nbsp {{ profil.age }}
                                    {% else %}
                                        Age &nbsp: &nbsp Non renseigné
                                    {% endif %}
                                </div>

                                <!-------- Sexe renseigné ou non -------->
                                <div class="col p-1">
                                    {% if profil.sexe is not null %}
                                        Sexe &nbsp: &nbsp {{ profil.sexe }}
                                    {% else %}
                                        Sexe &nbsp: &nbsp Non renseigné
                                    {% endif %}</div>
                                <div class="col p-1"> Email &nbsp: &nbsp {{ profil.email }}</div>
                                <br>
                                <div class="col p-1" id="genre">Genre de films préféré : {{ profil.genre.type }}</div>
                            </div>
                        </div>


                        <!-------- A propos si modifié ou non -------->
                        {% if profil.info is not null %}
                            <hr>
                            <div class="row w100">
                                <div class="col text-center ml-3 mr-3 mt-2" id="apropos">
                                    <h4> A propos :</h4> <br>
                                    <div class="row justify-content-center">
                                        <div class="col-8 mb-3">
                                            {{ profil.info|nl2br }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                        {% else %}
                        {% endif %}
                    </div>
                </div>
            </div>

            </div>

    <div class="row d-flex justify-content-center">

    <div class="col-xs">
        <a type="button" href="{{ path('app_profil_edit') }}"
           class="btn btn-dark mt-5 mb-5 rounded" >
            Modifier votre profil
        </a>
    </div>
    </div>
    </div>
{% endblock %}